<div class="main__content">
  <div class="main__content_head flex_center">
    <a href="../admin/film" class="add_content"
      ><i class="bi bi-arrow-left-circle"></i> <span>Quay Lại</span></a
    >
  </div>
  <div class="main__content_body">
    <div
      class="main__detail_film bg-flm"
      style="background-image: url('../<%= detailFilm.f_banner %>')"
    >
      <div class="main__detail_info flex_center">
        <div class="poster_image">
          <img
            src="../<%= detailFilm.f_poster %>"
            alt="<%= detailFilm.f_title %>"
          />
        </div>
        <div class="main__detail_film_content">
          <h3 class="title_film"><%= detailFilm.f_title %></h3>
          <p class="desc_film"><%= detailFilm.f_description %></p>
          <div class="line"></div>
          <p class="time_film flex_center">
            <small> <i class="bi bi-clock"></i> <span>28/11</span> </small>
            <small> <i class="bi bi-calendar"></i> <span>2022</span> </small>
          </p>
        </div>
      </div>
    </div>
