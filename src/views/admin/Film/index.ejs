<div class="main__content">
  <div class="main__content_head flex_center">
    <!-- <a href="" class="add_content"
      ><i class="bi bi-plus-circle"></i> <span>Thêm mới thể loại</span></a
    > -->
    <a href="./add-new-film" class="add_content"
      ><i class="bi bi-plus-circle"></i> <span>Thêm dự án</span></a
    >
    <!-- <a href="" class="add_content"
      ><i class="bi bi-plus-circle"></i> <span>Thêm mới thể loại</span></a
    > -->
  </div>
  <div class="main__content_body">
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th class="">#</th>
            <th>Banner</th>
            <th>Thể loại</th>
            <th class="title4">Tên phim</th>
            <th>Lượt xem</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" border="0">
        <tbody>
          <% listFilms.forEach((item, index) => { %>
          <tr>
            <td class=""><%= index + 1 %></td>
            <td>
              <img class="thumb-film" src="../<%= item.f_banner %>" alt="" />
            </td>
            <td><%= item.f_category %></td>
            <td class="title4">
              <p><%= item.f_title %></p>
            </td>
            <td><%= item.f_views %></td>
            <td>
              <a class="details-film" href="/detail/<%= item.id %>"
                ><i class="bi bi-info-circle"></i
              ></a>
              <!-- an/ hien -->
              <a class="hidden" href="./delete/<%= item.id %>"
                ><i class="bi bi-trash"></i>
                <!-- <i class="bi bi-eye-slash"></i> -->
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
